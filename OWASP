openapi: 3.0.0
info:
  title: OWASP Juice Shop API
  version: 1.0.0
  description: Basic OpenAPI definition for OWASP Juice Shop login functionality.
servers:
- url: http://192.168.172.115:3000
paths:
  /rest/user/login:
    post:
      summary: Login user
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                email:
                  type: string
                password:
                  type: string
              required:
              - email
              - password
      responses:
        '200':
          description: Successful login
        '401':
          description: Unauthorized
components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
